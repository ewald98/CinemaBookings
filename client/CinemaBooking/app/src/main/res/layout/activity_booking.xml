<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".BookingActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:text="Selected movie and date for your reservation: "
        android:textColor="@color/white2"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/chosenmovietitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="25dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:text="Chosen movie title"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/chosendate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosenmovietitle"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:text="Chosen date"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="#32000000"
        android:ems="15"
        android:hint=" Full Name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:visibility="visible" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#32000000"
        android:ems="15"
        android:layout_below="@+id/fullname"
        android:hint=" Phone number"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:visibility="visible" />

    <EditText
        android:id="@+id/nrreservedseats"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#32000000"
        android:layout_below="@+id/phonenumber"
        android:ems="15"
        android:textColor="@color/white"
        android:hint=" Number of reserved seats"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <Button
        android:id="@+id/bookseatsbutton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nrreservedseats"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Book seats"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>
